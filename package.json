{
  "name": "teleport-docs-next",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "git-update": "git submodule update --init --remote",
    "build-node": "rm -rf .build && tsc --build tsconfig.node.json && tsc-esm-fix --target='.build' --ext='.mjs'",
    "generate-sitemap": "node ./scripts/generate-sitemap.mjs",
    "generate-article-links": "node ./scripts/generate-article-links.mjs",
    "preflight": "yarn build-node && yarn generate-article-links",
    "dev": "yarn preflight && next dev",
    "build": "yarn preflight && next build",
    "update-and-build": "yarn git-update && yarn build && yarn generate-sitemap",
    "start": "next start",
    "uvu-test": "loadr -- uvu uvu-tests",
    "test": "npx playwright test",
    "base:eslint": "eslint --cache --cache-location node_modules/.cache/eslint '**/*.{js,jsx,ts,tsx}'",
    "base:prettier": "prettier '**/*.{js,jsx,ts,tsx,json}'",
    "lint": "yarn base:eslint --fix && yarn base:prettier --write -l",
    "lint-check": "yarn base:eslint && yarn base:prettier --check",
    "typecheck": "tsc --noEmit --skipLibCheck --incremental --tsBuildInfoFile node_modules/.cache/tsc/tsbuildinfo --project .",
    "markdown-lint": "remark --rc-path .remarkrc.mjs 'content/**/docs/pages/**/*.mdx' --frail --ignore-pattern '**/includes/**' --silently-ignore",
    "markdown-lint-external-links": "WITH_EXTERNAL_LINKS=true yarn markdown-lint",
    "markdown-fix": "FIX=true yarn markdown-lint -o"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --check"
    ],
    "*.{json}": "prettier --check"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged"
  },
  "dependencies": {
    "@algolia/autocomplete-js": "^1.8.3",
    "@algolia/autocomplete-theme-classic": "^1.8.3",
    "@algolia/client-search": "^4.15.0",
    "@reach/listbox": "^0.18.0",
    "algoliasearch": "^4.15.0",
    "classnames": "^2.3.1",
    "date-fns": "^2.27.0",
    "next": "13.2.4",
    "posthog-js": "^1.51.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-use": "^17.3.1",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "13.2.4",
    "@playwright/test": "^1.31.2",
    "@svgr/webpack": "^6.2.1",
    "@types/glob": "^7.2.0",
    "@types/hast": "^2.3.4",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^17.0.29",
    "@types/react": "^18.0.28",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "ajv": "^8.11.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.36.0",
    "eslint-config-next": "^13.2.4",
    "glob": "^9.3.0",
    "got": "12.6.0",
    "gray-matter": "^4.0.3",
    "hast-util-heading-rank": "^2.1.0",
    "hast-util-to-string": "^2.0.0",
    "image-size": "^1.0.2",
    "js-yaml": "^4.1.0",
    "lint-staged": "^13.2.0",
    "loadr": "^0.1.1",
    "mdast-util-from-markdown": "^1.3.0",
    "mdast-util-frontmatter": "^1.0.1",
    "mdast-util-gfm": "^2.0.2",
    "mdast-util-mdx": "^2.0.1",
    "micromark-extension-frontmatter": "^1.0.1",
    "micromark-extension-gfm": "2.0.1",
    "micromark-extension-mdxjs": "^1.0.0",
    "postcss": "^8.4.12",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^7.4.4",
    "prettier": "^2.8.4",
    "prettier-config-standard": "^5.0.0",
    "rehype-highlight": "^6.0.0",
    "rehype-react": "^7.1.1",
    "rehype-slug": "^5.0.1",
    "rehype-stringify": "^9.0.3",
    "remark": "^14.0.2",
    "remark-cli": "11.0.0",
    "remark-copy-linked-files": "^1.5.0",
    "remark-frontmatter": "^4.0.1",
    "remark-gfm": "^3.0.1",
    "remark-lint-no-dead-urls": "^1.1.0",
    "remark-mdx": "^2.3.0",
    "remark-parse": "^10.0.1",
    "remark-preset-lint-markdown-style-guide": "^5.1.2",
    "remark-rehype": "^10.1.0",
    "remark-validate-links": "^12.1.0",
    "sharp": "^0.31.3",
    "simple-git-hooks": "^2.7.0",
    "stylelint": "^15.3.0",
    "stylelint-config-standard": "^31.0.0",
    "to-vfile": "7.2.4",
    "tsc-esm-fix": "^2.13.0",
    "tsm": "^2.2.1",
    "typescript": "^4.6.3",
    "unified": "^10.1.2",
    "unified-lint-rule": "^2.1.1",
    "unist-util-find": "^1.0.2",
    "unist-util-visit": "4.1.2",
    "unist-util-visit-parents": "^5.1.3",
    "uvu": "^0.5.3",
    "vfile": "^5.3.7",
    "webpack": "^5.76.2"
  }
}
